<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundomenu"
    tools:context="com.julio_hortenciohotmail.agenda.CadastraNaAgenda">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.41">

            <Button
                android:id="@+id/btcadastra"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.41"
                android:background="@android:color/holo_orange_light"
                android:text="Salvar Contato"
                android:layout_marginStart="26dp"
                android:layout_alignBaseline="@+id/btvoltar1"
                android:layout_alignBottom="@+id/btvoltar1"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btvoltar1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="Voltar"
                android:onClick="voltarTelaInicial"
                android:layout_marginEnd="19dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="22dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Nome"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textNome"
        android:layout_below="@+id/textNome"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nome"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editNome"
        android:layout_below="@+id/editNome"
        android:layout_marginTop="20dp"
        android:text="Telefone"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textTelefone"
        android:layout_below="@+id/textTelefone"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:hint="Telefone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        android:layout_below="@+id/editTelefone"
        android:layout_alignStart="@+id/editTelefone"
        android:layout_marginTop="23dp" />

    <EditText
        android:id="@+id/editCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textCelular"
        android:layout_below="@+id/textCelular"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Celular"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editCelular"
        android:layout_below="@+id/editCelular"
        android:layout_marginTop="23dp"
        android:text="Email"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_below="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail" />

</RelativeLayout>
