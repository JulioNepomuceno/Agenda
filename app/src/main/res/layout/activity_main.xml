<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundomenu"
    tools:context="com.julio_hortenciohotmail.agenda.MainActivity">


    <Button
        android:id="@+id/botaosobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sobre"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/botaoadicionar"
        android:layout_marginBottom="27dp"
        android:onClick="trataEventoBotaoTelaSobre"/>

    <Button
        android:id="@+id/botaoadicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/botaolistar"
        android:layout_alignBottom="@+id/botaolistar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:onClick="trataEventoBotaoTelaCadastra"
        android:background="@drawable/adicionar" />

    <Button
        android:id="@+id/botaolistar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botaosair"
        android:layout_alignStart="@+id/botaosair"
        android:layout_marginBottom="37dp"
        android:onClick="trataEventoBotaoTelaLista"
        android:background="@drawable/listar" />

    <Button
        android:id="@+id/botaosair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sair"
        android:onClick="trataEventoBotaoSair"
        android:layout_alignBaseline="@+id/botaosobre"
        android:layout_alignBottom="@+id/botaosobre"
        android:layout_toEndOf="@+id/botaosobre"
        android:layout_marginStart="30dp" />

</RelativeLayout>
